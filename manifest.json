{
  "manifest_version": 3,
  "name": "Canvascope",
  "version": "1.0.0",
  "description": "Instantly search all your Canvas course content using natural language. Privacy-first, all data stays local.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Canvascope"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://bcourses.berkeley.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://bcourses.berkeley.edu/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none';"
  }
}