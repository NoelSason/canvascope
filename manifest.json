{
  "manifest_version": 3,
  "name": "[BETA] Canvascope",
  "version": "1.0.1",
  "description": "Instantly search all your Canvas course content using natural language. Privacy-first, all data stays local.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "[BETA] Canvascope"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://bcourses.berkeley.edu/*",
    "*://bruinlearn.ucla.edu/*",
    "*://canvas.ucsd.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://bcourses.berkeley.edu/*",
        "*://bruinlearn.ucla.edu/*",
        "*://canvas.ucsd.edu/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.js",
        "styles.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}