{
  "manifest_version": 3,
  "name": "Canvascope",
  "version": "2.0.0",
  "description": "Instantly search all your Canvas course content using natural language. Privacy-first, all data stays with you.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Canvascope"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "961806200943-6deqch1r87uthbarmr7te483u4h7fn9m.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://bcourses.berkeley.edu/*",
    "*://bruinlearn.ucla.edu/*",
    "*://canvas.ucsd.edu/*",
    "*://canvas.asu.edu/*",
    "*://canvas.mit.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://bcourses.berkeley.edu/*",
        "*://bruinlearn.ucla.edu/*",
        "*://canvas.ucsd.edu/*",
        "*://canvas.asu.edu/*",
        "*://canvas.mit.edu/*"
      ],
      "js": [
        "lib/supabase.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/supabase.js",
        "popup.html",
        "popup.js",
        "styles.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}